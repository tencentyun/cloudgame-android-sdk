<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tencent.tcr.sdk.demo.cloudstream.ui.InstanceTokenActivity">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取实例访问令牌（演示）"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintBottom_toTopOf="@id/etInstanceIds"
            app:layout_constraintStart_toStartOf="@id/etInstanceIds" />

    <EditText
            android:id="@+id/etInstanceIds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入实例ID，多个实例用逗号分隔"
            android:text="ACP250819RHPCLIB,ACP250819OHEI9BD"
            android:inputType="text"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintBottom_toTopOf="@+id/etUserIp" />

    <EditText
            android:id="@+id/etUserIp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="用户IP地址（可选）"
            android:text="1.1.128.123"
            android:inputType="text"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@+id/etInstanceIds"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnConfirm" />

    <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="创建访问令牌"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@+id/etUserIp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>