<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:id="@+id/singlePlayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单机串流"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/batchPlayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群控串流"
            android:layout_margin="8dp"
            app:layout_constraintLeft_toRightOf="@id/singlePlayBtn"
            app:layout_constraintBaseline_toBaselineOf="@id/singlePlayBtn" />

    <Button
            android:id="@+id/singleOperatorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单机操作"
            android:layout_margin="8dp"
            app:layout_constraintLeft_toRightOf="@id/batchPlayBtn"
            app:layout_constraintBaseline_toBaselineOf="@id/batchPlayBtn" />


    <Button
            android:id="@+id/batchOperatorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批量操作"
            android:layout_margin="8dp"
            app:layout_constraintLeft_toRightOf="@id/singleOperatorBtn"
            app:layout_constraintBaseline_toBaselineOf="@id/singleOperatorBtn" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/singlePlayBtn"
            app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


